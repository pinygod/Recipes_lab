                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="17dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
